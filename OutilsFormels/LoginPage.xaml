<Window x:Class="OutilsFormels.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutilsFormels"
        mc:Ignorable="d"
        Title="LoginPage" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Login" HorizontalAlignment="Left" Height="31" Margin="102,22,0,0" VerticalAlignment="Top" Width="80"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Height="26" Margin="102,96,0,0" VerticalAlignment="Top" Width="80"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="102,134,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="btValider" Content="Valider" HorizontalAlignment="Left" Margin="107,216,0,0" VerticalAlignment="Top" Width="75" Click="ValiderFunction"  />
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="102,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Label x:Name="lblErrorMsg" Content="" HorizontalAlignment="Left" Height="41" Margin="58,170,0,0" VerticalAlignment="Top" Width="193" Foreground="Red"/>

    </Grid>
</Window>
