<Window x:Class="OutilsFormels.ViewPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OutilsFormels"
        mc:Ignorable="d"
        Title="Card List" Height="300" Width="auto">
    <Grid IsEnabled="False">
        <ListView Margin="10,10,10,46" Name="lvUsers">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Number" Width="250" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Expiration" Width="100" DisplayMemberBinding="{Binding Age}" />
                    <GridViewColumn Header="Type" Width="50" DisplayMemberBinding="{Binding Mail}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
